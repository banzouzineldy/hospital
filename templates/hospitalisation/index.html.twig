                                <div class="table-responsive">
                                    <table class="table table-striped" id="tableExport" width="100%" cellspacing="0">
                                        <thead>
                                        <tr>
                                        <th>Patient</th>
                                        <th>Type_Admission</th>
                                        <th>Motif_Admission</th>
                                        <th>Pathologie</th>
                                        <th>Chambre</th>
                                        <th>Lit</th>
                                        <th>Service</th>
                                        <th>Spécialité</th>
                                        <th>Date_Entrrée</th>
                                        <th>Date_Sortie</th>
                                        <th>Motif_Sortie</th>
                                        
                                        <th class="text-right">Action</th>
                                        </tr>  
                                        </thead>
                                        
                                        <tbody>
                                        {% for hospitalisations in hospitalisation %}
                                        <tr>
                        
                                            <td>{{hospitalisations.getPatient.getNom ~ ' ' ~ hospitalisations.getPatient.getPrenom }}</td>
                                            <td>{{hospitalisations.typeAdmission}}</td>
                                            <td>{{hospitalisations.motifAdmission}}</td>
                                            <td>{{hospitalisations.getPathologie.getlibelle}}</td>
                                            <td>{{hospitalisations.getChambre.getNumChambre}}</td>
                                            <td>{{hospitalisations.getLit.getNumLit}}</td>
                                           {#  <td>{{hospitalisations.getAgent.getNom ~ ' ' ~ hospitalisations.getAgent.getPrenom }}</td> #}
                                            <td>{{hospitalisations.getService.getlibelle}}</td>
                                            <td>{{hospitalisations.getSpecialite.getNom}}</td>
                                            <td>{{hospitalisations.dateEntree|date('Y-m-d')}}</td>
                                            <td>{{hospitalisations.dateSortie|date('Y-m-d')}}</td>
                                            <td>{{hospitalisations.motifSortie}}</td>
                                                        
                                            <td class="text-right">
                                            <div>
                                                <a class="btn text-blue" href="#"><i class="fas fa-eye"></i></a>	 
                                                <a class="btn text-blue" href="{{path('app_update_hospitalisation',{'id':hospitalisations.id}) }}"><i class="fas fa-edit "></i></a>
                                            
                                                <a class="btn btn-danger delet " href="#delete_hospitalisation" data-toggle="modal" data-target="" id="{{hospitalisations.id}}"> <i class="fa fa-trash"></i></a>
                                                    
                                            </div> 
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    
