    <script>

    var champselect_doctor=document.getElementById('rdvs_emailsmedecin');
          champselect_doctor.classList.add('d-none');
     $('#rdvs_specialite').on('change', function(){
       
            let me = $(this);
            var id = me.val();
            console.log(id);
    
            if(id == '' ){
                html  = `<option value="" selected> Sélectionner d'abord un service </option>`;
                var medecins = $('#rdvs_emailsmedecin');
                medecins.empty();
                medecins.append(html);
            }else{
                // Données à envoyer dans la requête POST
         const data = {
        id:id
            };

// Options de la requête
const options = {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json'
  },
  body: JSON.stringify(data)
};

// Effectuer la requête POST
fetch('https://localhost:8000/rendezvous/filtre', options)
  .then(response => response.json())
  .then(data => {
    // Traiter la réponse JSON
    console.log(data)
     var emailsdoctor=document.getElementById('rdvs_emailsmedecin');
     emailsdoctor.innerHTML="";
     data.utilisateur.forEach(element => {
    document.getElementById('rdvs_emailsmedecin').innerHTML+= `<option value="${element.id}">${element.nom}</option>`
    
});
champselect_doctor.classList.remove('d-none');
      

  })
  .catch(error => {
    // Gérer les erreurs
    console.error('Erreur:', error);
  });


            }
       }) 
    
    
